# ============================================
# The Daily Worker - Local Development Config
# ============================================
# Copy this file to .env and fill in your values

# Environment
ENVIRONMENT=local
DEBUG=true
LOG_LEVEL=DEBUG

# Server Configuration
BACKEND_HOST=localhost
BACKEND_PORT=8000
FRONTEND_HOST=localhost
FRONTEND_PORT=3000

# Database Configuration (Local)
# For SQLite (recommended for local):
DATABASE_URL=sqlite:///./dwnews.db

# For PostgreSQL (optional):
# DATABASE_URL=postgresql://username:password@localhost:5432/dwnews

# LLM API Keys (use your existing subscriptions)
# At least one is required for article generation
CLAUDE_API_KEY=your_claude_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Social Media APIs (Free Tiers)
# Twitter API v2 (500K tweets/month free)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Reddit API (60 requests/min free)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=DWnews/1.0

# ============================================
# Image Generation Configuration
# ============================================

# Google Gemini 2.5 Flash Image (Primary - AI Image Generation)
# Get API key: https://aistudio.google.com/apikey
# Uses Claude Sonnet to enhance prompts (generates 3 artistic concepts, selects best)
GEMINI_API_KEY=your_gemini_api_key_here

# Claude API (Required for Image Prompt Enhancement)
# Used to generate detailed artistic prompts for better image quality
# Get API key: https://console.anthropic.com
CLAUDE_API_KEY=your_claude_api_key_here

# Image Fallback Sources (Stock Photos - Free Tiers)
# Unsplash: 50 requests/hour (https://unsplash.com/developers)
UNSPLASH_ACCESS_KEY=your_unsplash_key_optional
# Pexels: 200 requests/hour (https://www.pexels.com/api/)
PEXELS_API_KEY=your_pexels_key_here

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password_immediately
# Generate a secure secret key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_secret_key_here

# Content Settings
MIN_READING_LEVEL=7.5
MAX_READING_LEVEL=8.5
MIN_ARTICLES_PER_DAY=3
MAX_ARTICLES_PER_DAY=10
MIN_GOOD_NEWS_PERCENTAGE=10

# Regional Settings
DEFAULT_REGION=national
TEST_REGION=midwest

# File Storage (Local)
LOCAL_IMAGE_STORAGE=./static/images
MAX_IMAGE_SIZE_MB=5

# Logging
LOG_FILE=./logs/dwnews.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Rate Limiting (local testing - more permissive)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=60

# Feature Flags
ENABLE_AUTO_PUBLISH=false
ENABLE_SOCIAL_POSTING=false

# News Sources (RSS Feeds)
RSS_FEED_AP=https://apnews.com/rss
RSS_FEED_REUTERS=https://www.reuters.com/rssFeed
RSS_FEED_PROPUBLICA=https://www.propublica.org/feeds/propublica/main

# Viability Filtering
MIN_CREDIBLE_SOURCES=3
MIN_ACADEMIC_CITATIONS=2

# ============================================
# Payment & Subscription System
# ============================================

# Stripe API (Payment Processing)
# Get keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# SendGrid API (Email Notifications)
# Get API key from: https://app.sendgrid.com/settings/api_keys
# Free tier: 100 emails/day
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
FROM_EMAIL=noreply@thedailyworker.com
FROM_NAME=The Daily Worker
